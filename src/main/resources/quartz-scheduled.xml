<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <!-- 配置定时任务类 -->
    <bean id="ssqScheduled" class="com.lsm.ssq.task.SSQScheduled"></bean>
    <!-- 配置任务明细 -->
    <bean id="getLatestSSQTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="ssqScheduled" />
        <property name="targetMethod" value="getLatestSSQ" />
        <property name="concurrent" value="false" />
    </bean>
    <!-- 配置触发时机 -->
    <bean id="getLatestSSQJob" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="getLatestSSQTask"></property>
        <property name="cronExpression">
            <value>0 0 0 1/1 * ? </value>
        </property>
    </bean>

    <!-- 配置任务明细 -->
    <bean id="getHistorySSQTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="ssqScheduled" />
        <property name="targetMethod" value="getHistorySSQ" />
        <property name="concurrent" value="false" />
    </bean>
    <!-- 配置触发时机 -->
    <bean id="getHistorySSQJob" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="getHistorySSQTask"></property>
        <property name="cronExpression">
            <value>0 0/10 * * * ? </value>
        </property>
    </bean>

    <!-- 配置作业任务 -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
          autowire="no">
        <property name="triggers">
            <list>
                <ref bean="getLatestSSQJob"/>
                <ref bean="getHistorySSQJob"/>
            </list>
        </property>
    </bean>

</beans>
